<div class="card">
    <div class="card-header">
        <strong>Inbox</strong>
    </div>
    <div class="card-body">
        <button class="btn btn-outline-danger delete-all-button">Delete All</button>
        
        <table class="inbox-table mt-3">
            <thead>
                <tr>
                    <th style="width: 50px;">&nbsp;</th>
                    <th style="width: 210px;">Received</th>
                    <th>Subject</th>
                    <th style="width: 320px;">From</th>
                    <th style="width: 320px;">To</th>
                </tr>
            </thead>
            <tbody>
            {{#if inbox.length}}
                {{#each inbox}}
                    <tr>
                        <td class="text-nowrap text-center">
                            [<a href="#" class="delete-button" data-message-id="{{id}}">x</a>]
                        </td>
                        <td class="text-nowrap">
                            {{received}}
                        </td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target=".message-modal" data-message-id="{{id}}">{{subject}}</a>
                        </td>
                        <td>
                            {{{from}}}
                        </td>
                        <td>
                            {{{to}}}
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="5">
                        <em class="text-muted">No messages</em>
                    </td>
                </tr>
            {{/if}}
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade message-modal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <strong class="subject"></strong>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="message"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-danger delete-button" data-bs-dismiss="modal" data-message-id="">Delete</button>
            </div>
        </div>
    </div>
</div>